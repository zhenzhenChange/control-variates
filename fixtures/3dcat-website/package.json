{
  "name": "root",
  "author": "karine <karine@rayvision.com>",
  "private": true,
  "license": "MIT",
  "version": "0.1.0",
  "description": "3DCAT Official Website.",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "svg": "npx svgr --out-dir=packages/common/components/svg --ext=jsx --filename-case=kebab internals/svg --jsx-runtime=automatic",
    "clean": "npx rimraf **/node_modules",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "lint": "pnpm lint:syntax & pnpm lint:format",
    "lint:syntax": "eslint ./**/*.{js,jsx,ts,tsx,d.ts,html} --fix --cache",
    "lint:format": "prettier ./**/*.{js,jsx,ts,tsx,md,css,less,scss,yml,yaml,html,json} --write --cache --ignore-unknown",
    "dev:main": "pnpm -F @3dcat/main develop",
    "dev:news": "pnpm -F @3dcat/news develop",
    "dev:share": "pnpm -F @3dcat/share develop",
    "dev:support": "pnpm -F @3dcat/support develop",
    "clean:all": "pnpm clean:main & pnpm clean:news & pnpm clean:share & pnpm clean:support",
    "clean:main": "pnpm -F @3dcat/main clean",
    "clean:news": "pnpm -F @3dcat/news clean",
    "clean:share": "pnpm -F @3dcat/share clean",
    "clean:support": "pnpm -F @3dcat/support clean",
    "build:main": "pnpm -F @3dcat/main build:test",
    "build:news": "pnpm -F @3dcat/news build",
    "build:share": "pnpm -F @3dcat/share build",
    "build:support": "pnpm -F @3dcat/support build"
  },
  "dependencies": {
    "@3dcat/gatsby-plugins": "workspace:^0.1.0",
    "fuse.js": "^5.2.3",
    "polished": "^4.2.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^4.3.1",
    "styled-components": "^5.3.6"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "gatsby": "^4.25.1",
    "gatsby-plugin-eslint": "^4.0.3",
    "gatsby-plugin-image": "^2.25.0",
    "gatsby-plugin-page-creator": "^4.25.0",
    "gatsby-plugin-pnpm": "^1.2.10",
    "gatsby-plugin-sharp": "^4.25.0",
    "gatsby-plugin-sitemap": "^5.25.0",
    "gatsby-plugin-styled-components": "^5.25.0",
    "gatsby-source-contentful": "^7.23.0",
    "gatsby-source-filesystem": "^4.25.0",
    "gatsby-transformer-sharp": "^4.25.0",
    "http-proxy-middleware": "^2.0.6",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "path-browserify": "^1.0.1",
    "prettier": "^2.8.1",
    "process": "^0.11.10",
    "typescript": "^4.9.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-is",
        "react-dom",
        "@babel/core",
        "babel-eslint",
        "babel-plugin-styled-components",
        "sharp",
        "graphql",
        "typescript",
        "eslint-webpack-plugin"
      ]
    }
  }
}
